<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">

	<Appenders>
		<Console name="STDOUT">
			<PatternLayout pattern="%date{ISO8601} [%thread] %-5level %logger:%line - %message%n"/>
		</Console>
	</Appenders>

	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="STDOUT"/>
		</Root>
	</Loggers>

</Configuration>
