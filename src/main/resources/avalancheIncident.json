{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title" : "Avalanche incident",
	"description" : "JSON description of an avalanche incident.",
	"type" : "object",
	"properties" : {
		"author" : { "$ref" : "https://apps.tirol.gv.at/lwd/produkte/json_schema/aws.json#author" },
		"location" : {
			"type" : "object",
			"properties" : {
				"country" : { "$ref" : "https://apps.tirol.gv.at/lwd/produkte/json_schema/aws.json#countryAlpha2Code"},
				"region" : { "type" : "string" },
				"subregion" : { "type" : "string" },
				"name" : { "type" : "string" },
				"geo" : { "$ref": "http://json-schema.org/geo" },
				"shape" : {
					"type" : "array",
					"minItems" : 3,
					"items" : { "$ref": "http://json-schema.org/geo" },
					"additionalProperties" : false
				},
				"elevation" : { "type" : "integer" },
				"angle" : { "type" : "integer" },
				"aspect" : { "$ref" : "https://apps.tirol.gv.at/lwd/produkte/json_schema/aws.json#aspect" },
				"quality" : { "$ref" : "#/definitions/quality" },
				"customData" : {
					"type" : "object",
					"patternProperties": {
						"^customData_": {}
					},
					"additionalProperties" : false
				}
			},
			"additionalProperties" : false
		},
		"datetime" : {
			"type" : "object",
			"properties" : {
				"date" : { "format" : "date-time", "type" : "string" },
				"quality" : { "$ref" : "#/definitions/quality" }
			},
			"additionalProperties" : false
		},
		"avalanche" : {
			"type" : "object",
			"properties" : {
				"size" : { "$ref" : "#/definitions/avalancheSize" },
				"type" : { "$ref" : "#/definitions/avalancheType" },
				"moistness" : { "$ref" : "#/definitions/avalancheMoistness" },
				"trigger" : { "$ref" : "#/definitions/triggerType" },
				"remote" : { "type" : "boolean" },
				"length" : { "type" : "integer" },
				"width" : { "type" : "integer" },
				"depth" : {
					"type" : "object",
					"properties" : {
						"max" : { "type" : "integer" },
						"min" : { "type" : "integer" },
						"average" : { "type" : "integer" }
					}
				},
				"quality" : { "$ref" : "#/definitions/quality" },
				"customData" : {
					"type" : "object",
					"patternProperties": {
						"^customData_": {}
					},
					"additionalProperties" : false
				}
			},
			"additionalProperties" : false
		},
		"avalancheProblem" : {
			"type" : "object",
			"properties" : {
				"dangerRating" : { "$ref" : "https://apps.tirol.gv.at/lwd/produkte/json_schema/aws.json#dangerRating" },
				"avalancheProblems" : {
					"type" : "array",
					"maxItems" : 2,
					"uniqueItems": true,
					"items" : { "$ref" : "https://apps.tirol.gv.at/lwd/produkte/json_schema/aws.json#avalancheProblem" },
					"additionalProperties" : false
				},
				"dangerPatterns" : {
					"type" : "array",
					"maxItems" : 3,
					"uniqueItems": true,
					"items" : { "$ref" : "https://apps.tirol.gv.at/lwd/produkte/json_schema/aws.json#dangerPattern" },
					"additionalProperties" : false
				},
				"comment" : { "type" : "string" },
				"customData" : {
					"type" : "object",
					"patternProperties": {
						"^customData_": {}
					},
					"additionalProperties" : false
				}
			},
			"additionalProperties" : false
		},
		"persons" : {
			"type" : "object",
			"properties" : {
				"involved" : { "type" : "integer" },
				"notBurried" : { "type" : "integer" },
				"partialBurried" : { "type" : "integer" },
				"completeBurried" : { "type" : "integer" },
				"fatal" : { "type" : "integer" },
				"injured" : { "type" : "integer" },
				"uninjured" : { "type" : "integer" },
				"travelMode" : { "$ref" : "#/definitions/travelMode" },
				"activity" : { "$ref" : "#/definitions/activity" },
				"terrain" : { "$ref" : "#/definitions/terrain" },
				"guided" : { "type" : "boolean" },
				"equipment" : {
					"type" : "object",
					"properties" : {
						"airbag" : { "$ref" : "#/definitions/allSomeNoneType"},
						"lvs" : { "$ref" : "#/definitions/allSomeNoneType"}
					}
				},
				"rescueType" : { "$ref" : "#/definitions/rescueType" },
				"customData" : {
					"type" : "object",
					"patternProperties": {
						"^customData_": {}
					},
					"additionalProperties" : true
				}
			},
			"additionalProperties" : false
		},
		"files" : {
			"type" : "array",
			"items" : {
				"type" : "object",
				"properties" : {
					"filetype" : { "$ref" : "#/definitions/filetype" },
					"url" : { "format": "uri", "type" : "string" }
				},
				"additionalProperties" : false
			},
			"additionalProperties" : false
		},
		"comment" : { "type" : "string" }
	},

	"additionalProperties" : false,

	"definitions" : {
		"quality" : {
			"type" : "string",
			"enum" : [ "measured", "estimated" ]
		},
		"avalancheSize" : {
			"type" : "string",
			"enum" : [ "sluff", "small", "medium", "large", "very large" ]
		},
		"avalancheType" : {
			"type" : "string",
			"enum" : [ "slab", "loose", "glide" ]
		},
		"avalancheMoistness" : {
			"type" : "string",
			"enum" : [ "dry", "wet", "mixed" ]
		},
		"triggerType" : {
			"type" : "string",
			"enum" : [ "person", "blast", "spontaneous", "other", "unknown" ]
		},
		"travelMode" : {
			"type" : "string",
			"enum" : [ "ascending", "descending", "not moving", "unknown" ]
		},
		"activity" : {
			"type" : "string",
			"enum" : [ "backcountry skiing", "off-piste skiing", "on skiruns", "alpinist", "on road", "in building", "snowmobiling", "other", "unknown" ]
		},
		"terrain" : {
			"type" : "string",
			"enum" : [ "backcountry", "off-piste", "on-piste", "sled run", "road", "other", "unknown" ]
		},
		"allSomeNoneType" : {
			"type" : "string",
			"enum" : [ "all", "some", "none" ]
		},
		"rescueType" : {
			"type" : "string",
			"enum" : [ "self", "companion", "other group", "organized rescue", "other" ]
		},
		"filetype" : {
			"type" : "string",
			"enum" : [ "image", "report" ]
		}
	}
}
